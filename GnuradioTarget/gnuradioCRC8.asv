function crc8 = gnuradioCRC2(bytes)
    crcgen = comm.CRCGenerator( ...
        'Polynomial', [1 1 1], ... 
        'InitialConditions', [1 1 1 1 1 1 1 1], ...
        'FinalXOR', [0 0 0 0 0 0 0 0], ...
        'ReflectInputBytes', false, ...
        'ReflectChecksums', false ...
    );

    crc8 = step(crcgen);
end
